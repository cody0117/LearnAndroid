<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_toast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kurtis.rx.androidexamples.ToastActivity"
    >
  <TextView
      android:id="@+id/toastduration_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:text="Toast Duration:"
      android:textAppearance="@style/TextAppearance.AppCompat.Headline"
      />

  <RadioGroup
      android:id="@+id/toastradiogroup"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_toEndOf="@id/toastduration_text"
      android:layout_toRightOf="@id/toastduration_text"
      android:orientation="horizontal"
      >

    <RadioButton
        android:id="@+id/rbShort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toastduration_text"
        android:layout_toRightOf="@+id/toastduration_text"
        android:layout_toEndOf ="@+id/toastduration_text"
        android:text="Short"
        android:checked="true"
        />
    <RadioButton
        android:id="@+id/rbLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toastduration_text"
        android:layout_toRightOf="@+id/toastduration_text"
        android:layout_toEndOf ="@+id/toastduration_text"
        android:text="Long"
        android:checked="false"
        />

  </RadioGroup>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Show Toast"
      android:id="@+id/btnShowToast"
      android:layout_below="@id/toastradiogroup"
      
      />

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Show Custom Toast"
      android:id="@+id/btnShowCustomToast"
      android:layout_below="@id/btnShowToast"
      />


</RelativeLayout>
